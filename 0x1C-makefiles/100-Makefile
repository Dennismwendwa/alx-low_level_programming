SRC = main.c school.c
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

$(OBJ):
	$(CC) -c $(filter %.c, $^)

clean:
	-@$(RM) *~ $(NAME)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean
	-@$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

ifneq ($(any m.h),)
-include ma.h
else
	$(error m.h not found.)
endif
