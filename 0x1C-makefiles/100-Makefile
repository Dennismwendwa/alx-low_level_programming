SRC = main.c school.c
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

clean:
	-@$(RM) *~ $(NAME)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: all clean oclean fclean re

ifeq ($(any m.h),m.h)
-include m.h
endif
